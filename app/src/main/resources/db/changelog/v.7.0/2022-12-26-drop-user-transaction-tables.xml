<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2022-12-26-drop-order-position-fk" author="Andrdemyan4ik@gmail.com">
        <dropForeignKeyConstraint baseTableName="order" constraintName="fk_order_position"/>
    </changeSet>

    <changeSet id="2022-12-26-drop-order-amount-check" author="Andrdemyan4ik@gmail.com">
        <dropForeignKeyConstraint baseTableName="order" constraintName="amount_check"/>
        <rollback>
            <sql>
                ALTER TABLE "order"
                    ADD CONSTRAINT amount_check CHECK ( amount >= 0.01 )
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="2022-12-26-drop-order-user-transaction-fk" author="Andrdemyan4ik@gmail.com">
        <dropForeignKeyConstraint baseTableName="order" constraintName="fk_order_user_transaction"/>
    </changeSet>

    <changeSet id="2022-12-26-drop-order-table" author="Andrdemyan4ik@gmail.com">
        <dropTable tableName="order" schemaName="public"/>
        <rollback>
            <createTable tableName="order">
                <column name="id" type="bigserial" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false"/>
                </column>
                <column name="amount" type="double">
                    <constraints nullable="false"/>
                </column>
                <column name="position_id" type="bigint">
                    <constraints nullable="false" foreignKeyName="fk_order_position" references="position(id)"/>
                </column>
                <column name="user_transaction_id" type="bigint">
                    <constraints nullable="false" foreignKeyName="fk_order_user_transaction"
                                 references="user_transaction(id)"/>
                </column>
            </createTable>
        </rollback>
    </changeSet>

    <changeSet id="2022-12-26-drop-user-transaction-user-fk" author="Andrdemyan4ik@gmail.com">
        <dropForeignKeyConstraint baseTableName="user_transaction" constraintName="fk_user_transaction_user"/>
        <rollback>
            <addForeignKeyConstraint baseTableName="user_transaction" baseColumnNames="user_id"
                                     constraintName="fk_user_transaction_user"
                                     referencedTableName="user"
                                     referencedColumnNames="id"/>
        </rollback>
    </changeSet>

    <changeSet id="2022-12-26-drop-user-transaction-table" author="Andrdemyan4ik@gmail.com">
        <dropTable tableName="user_transaction" schemaName="public"/>
        <rollback>
            <createTable tableName="user_transaction">
                <column name="id" type="bigserial" autoIncrement="true">
                    <constraints nullable="false" primaryKey="true"/>
                </column>
                <column name="user_id" type="uuid">
                    <constraints nullable="false" foreignKeyName="fk_user_transaction_user" references="user(id)"/>
                </column>
                <column name="created" type="timestamp">
                    <constraints nullable="false"/>
                </column>
            </createTable>
        </rollback>
    </changeSet>

</databaseChangeLog>