<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2022-11-17-add-position-amount-check" author="Andrdemyan4ik@gmail.com">
        <sql>
            ALTER TABLE position
                ADD CONSTRAINT amount_check CHECK ( amount >= 0.01 )
        </sql>
        <rollback>
            <sql>
                ALTER TABLE position
                    DROP CONSTRAINT amount_check
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="2022-11-17-add-position-version-lock" author="Andrdemyan4ik@gmail.com">
        <addColumn tableName="position">
            <column name="version" type="bigint" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>