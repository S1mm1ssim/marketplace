<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2022-12-16-drop-role" author="Andrdemyan4ik@gmail.com">
        <dropColumn tableName="user" columnName="role"/>
        <rollback>
            <addColumn tableName="user">
                <column name="role" type="user_role" defaultValue="MANAGER">
                    <constraints nullable="false"/>
                </column>
            </addColumn>
        </rollback>
    </changeSet>

    <changeSet id="2022-12-16-drop-role-enum" author="Andrdemyan4ik@gmail.com">
        <sql>DROP TYPE user_role;</sql>
        <rollback>
            <sql>CREATE TYPE user_role AS ENUM ('MANAGER', 'DIRECTOR', 'STORAGE_MANAGER')</sql>
        </rollback>
    </changeSet>

    <changeSet id="2022-12-16-drop-password" author="Andrdemyan4ik@gmail.com">
        <dropColumn tableName="user" columnName="password"/>
        <rollback>
            <addColumn tableName="user">
                <column name="password" type="varchar(255)" defaultValue="resetPassword">
                    <constraints nullable="false"/>
                </column>
            </addColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>