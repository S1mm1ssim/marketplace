<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql"/>

    <changeSet id="2022-11-03-add-uuid-auto-generation-user" author="Andrdemyan4ik@gmail.com">
        <addDefaultValue tableName="user" columnName="id" defaultValueComputed="${uuid_function}" />
    </changeSet>

    <changeSet id="2022-11-03-add-uuid-auto-generation-item" author="Andrdemyan4ik@gmail.com">
        <addDefaultValue tableName="item" columnName="id" defaultValueComputed="${uuid_function}" />
    </changeSet>

</databaseChangeLog>