<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2022-11-24-create-table-user_transaction" author="Andrdemyan4ik@gmail.com">
        <createTable tableName="user_transaction">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="userId" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_user_transaction_user" references="user(id)"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2022-11-24-create-table-order" author="Andrdemyan4ik@gmail.com">
        <createTable tableName="order">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="position_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_position" references="position(id)"/>
            </column>
            <column name="user_transaction_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_order_user_transaction"
                             references="user_transaction(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2022-11-17-add-order-amount-check" author="Andrdemyan4ik@gmail.com">
        <sql>
            ALTER TABLE "order"
                ADD CONSTRAINT amount_check CHECK ( amount >= 0.01 )
        </sql>
        <rollback>
            <sql>
                ALTER TABLE "order"
                    DROP CONSTRAINT amount_check
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>