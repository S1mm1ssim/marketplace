<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2022-11-24-add-position-min-amount" author="Andrdemyan4ik@gmail.com">
        <addColumn tableName="position">
            <column name="min_amount" type="double"/>
        </addColumn>
        <addNotNullConstraint tableName="position" columnName="min_amount" defaultNullValue="0.01"/>
    </changeSet>

    <changeSet id="2022-11-24-add-position-min-amount-check" author="Andrdemyan4ik@gmail.com">
        <sql>
            ALTER TABLE position
                ADD CONSTRAINT min_amount_check CHECK ( min_amount >= 0.01 )
        </sql>
        <rollback>
            <sql>
                ALTER TABLE position
                    DROP CONSTRAINT min_amount_check
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>